<Window x:Class="UnitConvertor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitConvertor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <TextBox Name="InputValue" Width="100" Height="30" Margin="355,124,346,280"/>
        <ComboBox Name="FromUnit" Width="100" Height="30" Margin="355,164,345,240"  >
            <ComboBoxItem>Meters</ComboBoxItem>
            <ComboBoxItem>Kilometers</ComboBoxItem>
            <ComboBoxItem>Feet</ComboBoxItem>
            <ComboBoxItem>Miles</ComboBoxItem>
        </ComboBox>

        <ComboBox Name="ToUnit" Width="100" Height="30" Margin="355,206,346,198" >
            <ComboBoxItem>Meters</ComboBoxItem>
            <ComboBoxItem>Kilometers</ComboBoxItem>
            <ComboBoxItem>Feet</ComboBoxItem>
            <ComboBoxItem>Miles</ComboBoxItem>
        </ComboBox>
        <Button Content="Convert" Width="100" Height="30" Margin="355,248,346,156" Click="ConvertButton_Click"  Grid.Row="3"/>
        <TextBlock Name="Result" Width="100" Height="30" Margin="355,289,346,115" />
    </Grid>

</Window>
